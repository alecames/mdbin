{
  "tasks": {
    "debug": "deno run --inspect-brk --allow-net --unstable --allow-read main.ts",
    "dev": "deno run --watch --allow-net --unstable --allow-read main.ts",
    "start": "deno run --allow-net --unstable --allow-read main.ts"
  },
  "imports": {
    "std/": "https://deno.land/std@0.202.0/",
    "xss": "https://esm.sh/xss@1.0.14",
    "marked": "https://esm.sh/marked@9.0.3"
  },
  "lint": {
    "include": ["*.ts"],
    "exclude": ["lib/", "static/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["*.ts"],
    "exclude": ["lib/", "static/", "templates.ts"]
  }
}